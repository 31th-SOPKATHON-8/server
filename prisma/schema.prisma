generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Information {
  id               Int              @id(map: "Information_pk")
  TrainName        String           @db.VarChar(500)
  StartTime        String           @db.VarChar(500)
  LastTime         String           @db.VarChar(500)
  NormalPrice      String           @db.VarChar(500)
  SpecialPrice     String           @db.VarChar(500)
  trailInformation trailInformation @relation(fields: [id], references: [id])
}

model User {
  id       Int    @id(map: "user_pk") @unique(map: "user_id_uindex") @default(autoincrement())
  userName String
  age      Int?
}

model netflixMovie {
  id                Int      @id(map: "netflixMovie_pk") @unique @default(autoincrement())
  title             String
  image             String
  iconImage         String
  runningTime       Int
  watchTime         Int
  epiNum            Int
  currentNum        Int
  detail            String
  character         String[]
  genre             String[]
  seriesDescription String
}

model reservation_ticket {
  id         Int     @id @default(autoincrement())
  Departures String  @db.VarChar(50)
  Arrivals   String  @db.VarChar(50)
  StartDate  String  @db.VarChar(200)
  LastDate   String  @db.VarChar(200)
  Personnel  Int
  content    String? @db.VarChar(500)
}

model ticketInformation {
  Arrivals    String @db.VarChar(500)
  CarNumber   Int
  Departures  String @db.VarChar(500)
  LastTime    String @db.VarChar(500)
  Seat        Int
  StartDate   String @db.VarChar(50)
  StartTime   String @db.VarChar(500)
  Station     Int
  TimeTaken   String @db.VarChar(500)
  TrainNumber Int
  content     String @db.VarChar(500)
  id          Int    @id(map: "ticketInformation_pk") @unique @default(autoincrement())
}

model trailInformation {
  id          Int          @id(map: "trailInformation_pk") @unique @default(autoincrement())
  Departures  String       @db.VarChar(500)
  Arrivals    String       @db.VarChar(500)
  StartDate   String       @db.VarChar(50)
  Information Information?
}
